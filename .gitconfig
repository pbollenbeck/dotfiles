[user]
	name = Peter Bollenbeck
	email = peter.bollenbeck@invision.de
[core]
	editor = vi
	excludesfile = ~/.gitexcludes
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[credential]
	helper = osxkeychain
[push]
	default = simple
[pull]
	rebase = true
